                                  TextWrapping="Wrap" />
                    <ui:Button Grid.Row="0"
                               Grid.RowSpan="2"
                               Grid.Column="1"
                               Margin="0,0,36,0"
                               Command="{Binding TestFeishuNotificationCommand}"
                               Content="Send" />
                </Grid>
            </StackPanel>
        </ui:CardExpander>

        <!-- OneBot Notifications -->
